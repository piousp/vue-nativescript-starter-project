{
  "env": {
    "browser": false,
    "es6": true,
    "node": true
  },
  "plugins": [],
  "extends": [
    "airbnb-base"
  ],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "no-param-reassign": ["error", { "props": false }],
    "import/extensions": ["always", {"ignorePackages": true}],
    "no-use-before-define": ["error", { "functions": false, "classes": true }],
    "no-underscore-dangle": [2,{"allow": ["_id"]}],
    "prefer-promise-reject-errors": "off"
  }
}
